<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center">
<TextView android:text="@string/notify_me_when_snow_settings" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:gravity="center"></TextView>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center">
<Spinner android:id="@+id/snow_settings_amount" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:entries="@array/one_to_24">
</Spinner>
<Spinner android:id="@+id/snow_settings_units" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:entries="@array/inches_cm">
</Spinner>
</LinearLayout>
<TextView android:text="@string/notify_fresh_snow_predicted" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:gravity="center">
</TextView>
</LinearLayout>
